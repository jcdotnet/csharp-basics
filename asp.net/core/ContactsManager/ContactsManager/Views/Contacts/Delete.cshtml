@model PersonResponse
@{
    ViewBag.Title = "Delete Contact";
}

<div class="w-50">
    <div class="flex">
        <div class="w-50">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="flex-1 text-right">
            <a asp-controller="Contacts" asp-action="Index" class="link-hover">Back to contacts</a>
        </div>
    </div>
    <form asp-controller="Contacts" asp-action="Delete" method="post">

        <input type="hidden" asp-for="Id" />

        <div class="flex form-field">
            <div class="w-25">
                <label for="Name" class="form-label pt">Name</label>
            </div>
            <div class="flex-1">
                <input asp-for="Name" class="form-input" disabled/>
            </div>
        </div>
        <div class="form-field flex">
            <div class="w-25">
            </div>
            <div class="flex-1">
                <button class="button button-red-back">Delete</button>
            </div>
        </div>
    </form>
</div>