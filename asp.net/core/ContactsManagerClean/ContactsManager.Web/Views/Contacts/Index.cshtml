@model IEnumerable<PersonResponse>
@{
    ViewBag.Title = "Contacts Manager";
}

<div class="flex">
    <div class="flex-1">
        <div class="text-grey">
            <span>Contacts</span>
            <i class="fa-solid fa-caret-right"></i>
            <span class="text-grey">List</span>
        </div>
    </div>

    <div class="flex-1 text-right">
        <a asp-controller="Contacts" asp-action="Create" class="button-link button-blue-back">Add New Contact</a>
    </div>
</div>

<form asp-controller="Contacts" method="get">
    <div class="table-container">
         <div class="flex">
            <div class="flex-1">
                <h2>People</h2>
            </div>
            <div class="flex-3 text-right">
                <label>Search by:</label>
                @* Eg: searchBy=Name&search=John *@

                <select class="search-dropdown" name="searchBy" style="width: 200px">
                    @foreach (var pair in ViewBag.SearchFields)
                    {
                        var selected = pair.Key == ViewBag.SearchBy ? "selected" : null;
                        <option value="@pair.Key" selected=@selected>@pair.Value</option>
                    }
                </select>
                <input type="search" id="Search" class="search-text" placeholder="Search" name="search" value="@ViewBag.Search" style="width:200px" />

                <button class="search-button">Search</button> @* type="submit" (default in forms) *@

                <a asp-controller="Contacts" class="ml link-hover">Clear all</a>
            </div>
        </div>

        <table class="table w-100 mt">
            <thead>
                <tr>
                    @await Html.PartialAsync("_TableHeader", new ViewDataDictionary(ViewData)
                    {
                        { "Name", nameof(PersonResponse.Name)},
                        { "DisplayName", "Name"}
                    })
                    @await Html.PartialAsync("_TableHeader", new ViewDataDictionary(ViewData)
                    {
                        { "Name", nameof(PersonResponse.Email)},
                        { "DisplayName", "Email"}
                    })
                    @await Html.PartialAsync("_TableHeader", new ViewDataDictionary(ViewData)
                    {
                        { "Name", nameof(PersonResponse.Address)},
                        { "DisplayName", "Address"}
                    })
                    @await Html.PartialAsync("_TableHeader", new ViewDataDictionary(ViewData)
                    {
                        { "Name", nameof(PersonResponse.BirthDate)},
                        { "DisplayName", "BirthDate"}
                    })
                    @await Html.PartialAsync("_TableHeader", new ViewDataDictionary(ViewData)
                    {
                        { "Name", nameof(PersonResponse.Age)},
                        { "DisplayName", "Age"}
                    })
                    @await Html.PartialAsync("_TableHeader", new ViewDataDictionary(ViewData)
                    {
                        { "Name", nameof(PersonResponse.Gender)},
                        { "DisplayName", "Gender"}
                    })
                    @await Html.PartialAsync("_TableHeader", new ViewDataDictionary(ViewData)
                    {
                        { "Name", nameof(PersonResponse.Country)},
                        { "DisplayName", "Country"}
                    })
                    <th>Newsletters</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (PersonResponse person in Model)
                {
                    <tr>
                        <td style="width:20%">@person.Name</td>
                        <td style="width:20%">@person.Email</td>
                        <td style="width:20%">@person.Address</td>
                        <td style="width:10%">@person.BirthDate?.ToString("yyyy/MM/dd")</td>
                        <td style="width:5%">@person.Age</td>
                        <td style="width:5%">@person.Gender</td>
                        <td style="width:10%">@person.Country</td>
                        <td style="width:5%">@person.ReceiveNewsletters</td>
                        <td style="width:5%">
                            <a asp-controller="Contacts" asp-action="Edit" asp-route-id="@person.Id">Edit</a>
                            <a asp-controller="Contacts" asp-action="Delete" asp-route-id="@person.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody> 
        </table>
     </div>
</form>