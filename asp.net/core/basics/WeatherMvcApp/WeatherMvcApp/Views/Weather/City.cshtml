@model CityWeather
@{
    if (Model != null)
    {
        ViewBag.Title = Model.Name + " | " + ViewBag.Title;
    }
}

<div class="text-center">
    @if (Model == null)
    {
        <h1>City Not Found</h1>
    } else
    {
        <div class="box w-30 margin-auto margin-top-200">
            <div class="flex-borderless">
                <div class="w-50">
                    <h2>@Model.Name</h2>
                    <h4 class="text-dark-grey">@Model.DateAndTime.ToString("dd MM yyyy")</h4>
                    <h4 class="text-dark-grey">@Model.DateAndTime.ToString("hh:mm tt")</h4>
                </div>
                <div class="w-50 border-left">
                    <h1 class="margin-left">
                        @Model.Temperature <sup class="text-grey">&#8457</sup>
                    </h1>
                </div>
            </div>
        </div>
    }
    <a href="~/">Back to the Home Page</a>
</div>
        